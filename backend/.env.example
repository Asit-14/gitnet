# Sample Environment Configuration for GitNet Backend
# Copy this file to .env.local and fill in your actual values

# GitHub OAuth Configuration
# Create a GitHub OAuth App at https://github.com/settings/developers
# Set Authorization callback URL to: http://localhost:3000/auth/github/callback
GITHUB_CLIENT_ID="your_github_client_id_here"
GITHUB_CLIENT_SECRET="your_github_client_secret_here"

# Database Configuration
# Use Neon PostgreSQL Database - see DATABASE_SETUP.md for detailed instructions
DATABASE_URL='postgresql://username:password@hostname:5432/database_name?sslmode=require'

# Application Configuration
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"

# Optional: Add any additional environment variables below
JWT_SECRET="your_jwt_secret_here"
PORT=5000
